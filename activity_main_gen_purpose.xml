<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <Button
                android:id="@+id/buttonAZ"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#bed774"
                android:text="A-Z Basic Words"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#8d74d7"
                android:text="Numbers"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonCol"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#e69b9e"
                android:text="Colors"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonABI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#748dd7"
                android:text="Animals, Birds and Insects"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#9be6be"
                android:text="Body Parts"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonCalTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffc966"
                android:text="Calendar and Time"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonFood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#74d78d"
                android:text="Food and Beverages"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonVehi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#74bfd7"
                android:text="Vehicles"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSpGa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#d78d74"
                android:text="Sports and Games"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />


            <Button
                android:id="@+id/buttonCC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#d774bf"
                android:text="Countries and Cities"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonJob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#FF00FF"
                android:text="Professions, Trades, Jobs and Designations"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonRel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#008080"
                android:text="Family, Kinship and Relationship"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPerson"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#008000"
                android:text="Famous People and Personalities"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBrands"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#C0C0C0"
                android:text="Brands"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonClo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#808000"
                android:text="Clothes and Accessories"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />


            <Button
                android:id="@+id/buttonPhrases"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#800000"
                android:text="Basic Phrases and Questions"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonIdioms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#FF0000"
                android:text="English Idioms"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>



</RelativeLayout>