<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

        <TextView
        android:id="@+id/wordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="211dp"
        android:textColor="#000"
        android:textSize="45dp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Type"
        android:layout_below="@+id/wordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />l
    <TextView
        android:id="@+id/synTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeTextView"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:text="Synonyms"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        android:id="@+id/antTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Antonyms"
        android:textColor="#000"
        android:layout_below="@+id/synTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        android:id="@+id/exampleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/antTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Example"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/imageView"
        android:layout_height="wrap_content"
        android:layout_below="@id/exampleTextView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>